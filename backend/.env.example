# Environment variables
NODE_ENV=development
PORT=3001

# Database
DB_HOST=localhost
DB_PORT=1433
DB_NAME=freedom_group
DB_USER=your_username
DB_PASSWORD=your_password

# JWT Secret
JWT_SECRET=your_very_secret_jwt_key_here_change_this_in_production

# Session timeout (30 minutes in milliseconds)
SESSION_TIMEOUT=1800000

# SMTP Settings (Gmail SMTP Relay - no auth required)
SMTP_HOST=smtp-relay.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_FROM=accounting@freedomgroup.online
# SMTP_USER and SMTP_PASSWORD are optional for smtp-relay.gmail.com
# Leave empty or omit if using relay without authentication
SMTP_USER=
SMTP_PASSWORD=

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Admin credentials (default admin user)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# File upload settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls

# Frontend URL for password reset links
FRONTEND_URL=http://localhost:3000